<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapter_employee_llEmployee"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/margin_small"
    android:paddingVertical="@dimen/margin_large"
    android:background="@drawable/bg_adapter_male"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/adapter_employee_ivGender"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="@dimen/margin_small"
        android:src="@drawable/ic_human_male"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/adapter_employee_tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee Name"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large"
            android:layout_marginBottom="@dimen/margin_small"/>
        <TextView
            android:id="@+id/adapter_employee_tvAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99"
            android:textSize="@dimen/text_medium"/>
    </LinearLayout>
</LinearLayout>
